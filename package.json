{
  "private": true,
  "devDependencies": {
    "cz-conventional-changelog": "^2.1.0",
    "lerna": "^2.11.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "echo TEST",
