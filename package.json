  },
  "version": "0.0.0-development",
  "repository": {
    "type": "git",
    "url": "https://github.com/OffCourse/offcourse-next.git"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
